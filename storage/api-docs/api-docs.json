        "/news/{query}": {
            "get": {
                "tags": [
                    "News"
                ],
                "summary": "Fetch combined news articles from multiple sources",
                "description": "Retrieves articles related to a specific query from NewsAPI.org, The Guardian, and The New York Times.",
                "operationId": "e0fe194259f97581652ec4e3ddd3b952",
                "parameters": [
                    {
                        "name": "query",
                        "in": "path",
                        "description": "Search query for news articles",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "News articles retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "newsApi": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "title": {
                                                        "type": "string"
                                                    },
                                                    "description": {
                                                        "type": "string"
                                                    },
                                                    "url": {
                                                        "type": "string"
                                                    },
                                                    "publishedAt": {
                                                        "type": "string",
                                                        "format": "date-time"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "guardian": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "webTitle": {
                                                        "type": "string"
                                                    },
                                                    "webUrl": {
                                                        "type": "string"
                                                    },
                                                    "sectionName": {
                                                        "type": "string"
                                                    },
                                                    "webPublicationDate": {
                                                        "type": "string",
                                                        "format": "date-time"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "nyt": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "headline": {
                                                        "properties": {
                                                            "main": {
                                                                "type": "string"
                                                            }
                                                        },
                                                        "type": "object"
                                                    },
                                                    "abstract": {
                                                        "type": "string"
                                                    },
                                                    "web_url": {
                                                        "type": "string"
                                                    },
                                                    "pub_date": {
                                                        "type": "string",
                                                        "format": "date-time"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Bad request due to invalid input"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated",
